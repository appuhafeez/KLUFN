<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="duobroscreations.klufn.activity.Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"><LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">  <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Get Notifications From CLUBS"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"/>
        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IEEE"
            android:textSize="25sp"
            android:id="@+id/ieee" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/sports" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KLUSO"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/kluso" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEA"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/sea"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KLUG"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/klug" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOCUS"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/focus" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULSE"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/pulse" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPARK"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/trusang" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESA"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:id="@+id/yantrik" />
        <Button
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Notifications"
            android:onClick="signup"
            android:textSize="30dp"
            android:id="@+id/signup"
            android:background="#911b18"/></LinearLayout></ScrollView>

</LinearLayout>
